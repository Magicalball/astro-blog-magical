---
const { frontmatter } = Astro.props
import BaseLayout from './BaseLayout.astro'
---

<meta charset="UTF-8" />
<BaseLayout>
  <div>
    <h1>{frontmatter.title}</h1>
    <p class="wrtime">发布于{frontmatter.pubDate.toString().slice(0, 10)}</p>
    <p class="wrauthor">Written by {frontmatter.author}</p>
  </div>
  <p><em>{frontmatter.description}</em></p>
  <slot />
</BaseLayout>

<style>
  div {
    box-sizing: border-box;
    text-align: center;
  }

  body {
    margin: 0 auto;
    width: 100%;
    max-width: 80ch;
    padding: 1rem;
    line-height: 1.5;
  }

  .wrtime {
    font-size: 0.9rem;
    padding: 0;
  }

  .wrauthor {
    font-size: 0.8rem;
    padding: 0;
  }
</style>
