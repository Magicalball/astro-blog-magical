---
import BaseLayout from "./BaseLayout.astro";
import { validateFrontmatter } from "../utils/validation";
import { resolveCoverImage } from "../utils/assets";
const { frontmatter } = Astro.props;
const fm = validateFrontmatter(frontmatter);
const cover = resolveCoverImage(fm.coverImage);
---

<meta charset="UTF-8" />
<BaseLayout 
  seoTitle={fm.title}
  seoDescription={fm.description}
  seoAuthor={fm.author}
  seoOgImage={cover}
>
  <div>
    <h1>{fm.title}</h1>
    <div class="postinfo">
      <p class="wrtime">发布于{fm.pubDate.toString().slice(0, 10)}</p>
      <div class="tags">
        <p>标签:</p>
        {
          (fm.tags || []).map((tag: string) => (
            <p class="tags">
              <a href={`/tags/${tag}`}>{tag}</a>
            </p>
          ))
        }
      </div>
    </div>
    <p class="wrauthor">Written by {fm.author}</p>
  </div>
  <p><em>{fm.description}</em></p>
  <slot />
</BaseLayout>

<style>
  div {
    box-sizing: border-box;
    text-align: center;
  }

  body {
    margin: 0 auto;
    width: 100%;
    max-width: 120ch;
    line-height: 1.5;
  }

  .wrauthor {
    font-size: 0.8rem;
    padding: 0;
  }

  .postinfo {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
    font-size: 1.2rem;
    padding: 0;
  }

  .tags {
    display: flex;
    justify-content: space-evenly;
    font-size: 1.2rem;
    padding: 0;
    gap: 0.6rem;
  }

  .tags a {
    text-decoration: none;
    color: #0070f3;
    padding: 4px 8px;
    border-radius: 6px;
    background-color: rgba(0, 112, 243, 0.1);
    transition: all 0.3s ease;
  }

  .tags a:hover {
    background-color: rgba(0, 112, 243, 0.2);
    transform: scale(1.05);
  }

  :global(.dark) .tags a {
    color: #66b3ff;
    background-color: rgba(102, 179, 255, 0.15);
  }

  :global(.dark) .tags a:hover {
    background-color: rgba(102, 179, 255, 0.25);
  }
</style>
