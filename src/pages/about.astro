---
import BaseLayout from '../layouts/BaseLayout.astro'
import '../styles/global.css'

const pageTitle = '关于我'
const identity = {
  bobbies: ['羽毛球', '动画', '音游'],
  CNname: '云易轩',
  Enname: 'Magical_ball',
  country: 'China',
  vocational: '学生',
  workemail: 'yixuanyun57@gmail.com',
}
const skills = ['HTML', 'CSS', 'JavaScript', 'Node.js', 'Astro']
const skillColor = 'navy'
---

<BaseLayout pageTitle={pageTitle}>
  <p>Name(CN): {identity.CNname}</p>
  <p>Name(EN): {identity.Enname}</p>
  <p>Country: {identity.country}</p>
  <p>身份: {identity.vocational}</p>
  <p>Email: {identity.workemail}</p>
  <p>爱好: {identity.bobbies[0]},{identity.bobbies[1]},{identity.bobbies[2]}</p>
  <p>技术栈:</p>
  <ul>
    {skills.map((skill) => <li class="skill">{skill}</li>)}
  </ul>
</BaseLayout>

<style is:global define:vars={{ skillColor }}>
  h1 {
    color: rgb(39, 121, 214);
    font-size: 4rem;
  }
  .skill {
    color: var(--skillColor);
    font-weight: bold;
  }
</style>
