---
import BaseLayout from '../layouts/BaseLayout.astro'
import '../styles/global.css'

const pageTitle = '文章'
const allPosts = await Astro.glob('./posts/*.md')
---

<BaseLayout pageTitle={pageTitle}>
  <p>都有些什么呀~</p>
  <ul>
    {
      allPosts.map((post) => (
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))
    }
  </ul>
</BaseLayout>
