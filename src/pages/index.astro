---
import BaseLayout from "../layouts/BaseLayout.astro";
import PostList from "../components/PostList.astro";
import DateTime from "../components/DateTime.jsx";
import Notice from "../components/Notice.jsx";
import Blackboard from "../components/Blackboard.astro";
import HomeAbout from "../components/HomeAbout.astro";
import HomeCenter from "../components/HomeCenter.astro";
import Blewbox from "../components/Blewbox.astro";
import "../styles/home.css";
import Blog from "./blog.astro";

const pageTitle = "魔法球的站点";
---

<BaseLayout>
  <Notice client:only />
  <div class="maxblock">
    <!--left -->
    <div class="span-left">
      <HomeAbout />
    </div>

    <!-- above -->
    <div class="span-above">
      <div class="above-a">
        <DateTime client:load />
        <Blackboard />
      </div>
    </div>

    <!-- below -->
    <div class="span-below">
      <Blewbox />
    </div>

    <!-- center -->
    <div class="span-center">
      <HomeCenter />
    </div>

    <!-- right -->
    <div class="span-right">
      <h2>最近更新</h2>
      <PostList />
    </div>
  </div>
</BaseLayout>
