---
import Baselayout from "../../layouts/BaseLayout.astro";
import "../../styles/layout.css";
const pageTitle = "标签";
import { normalizePost } from "../../utils/getPosts";

const globResult = import.meta.glob("../posts/**/*.{md,mdx}");
const allPosts = await Promise.all(Object.values(globResult).map((fn: any) => fn()));
const normalized = allPosts.map((p: any) => normalizePost(p));
const tags = [
  ...new Set(
    normalized
      .flatMap((post: any) => (post.tags || []).map((t: string) => t.trim()).filter(Boolean))
  ),  
].sort((a, b) => a.localeCompare(b));
---

<Baselayout pageTitle={pageTitle}>
  <div class="tags">
    {
      tags.map((tag) => (
        <p class="block">
          <a href={`/tags/${tag}`}>{tag}</a>
        </p>
      ))
    }
  </div>
</Baselayout>

<style>
  div {
    box-sizing: border-box;
  }

  body {
    margin: 0 auto;
    width: 100%;
    max-width: 120ch;
    line-height: 1.5;
  }

  .tags {
    display: flex;
    justify-content: space-evenly;
    flex-wrap: wrap;
    gap: 2rem;
    font-size: 1.2rem;
    padding: 0;
  }

  .tags a {
    text-decoration: none;
    color: #000;
    transition: color 0.3s ease;
  }

  .tags a:hover {
    color: #0070f3;
  }

  :global(.dark) .tags a {
    color: #ffffff;
  }

  :global(.dark) .tags a:hover {
    color: #66b3ff;
  }

  .block {
    display: flex;
    flex-direction: column;
    width: 150px;
    text-align: center;
    border-radius: 15px;
    box-shadow: 0 5px 8px #c8c8c8;
    overflow: hidden;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s forwards;
    animation-delay: 0.2s;
    background-size: cover;
    background-position: center;
    border-bottom: 3px solid #c4c4c4;
    background-color: rgb(255, 255, 255);
    padding: 16px;
    transition: all 0.3s ease;
  }

  .block:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
  }

  :global(.dark) .block {
    background-color: #2a2a2a;
    box-shadow: 0 5px 8px #000000;
    border-bottom: 3px solid #555555;
  }

  :global(.dark) .block:hover {
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.4);
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
