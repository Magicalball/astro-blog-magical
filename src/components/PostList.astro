---
const allPosts = await Astro.glob("../pages/posts/**/*.{md,mdx}");
const sortedPosts = allPosts
  .filter((p: any) => p?.frontmatter?.pubDate)
  .sort(
    (a: any, b: any) => new Date(b.frontmatter.pubDate).getTime() - new Date(a.frontmatter.pubDate).getTime()
  )
  .slice(0, 7);
---

<ul>
  {
    sortedPosts.map((post: any) => (
      <li>
        <p class="post-list">
          <a href={post.url} class="pltitle">
            {post.frontmatter.title}
          </a>
          {new Date(post.frontmatter.pubDate).toLocaleDateString()}
        </p>
      </li>
    ))
  }
</ul>

<style>
  .post-list {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  a::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1.5px;
    background-color: #333; /* 下划线 */
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.3s;
  }

  :global(.dark) a::after {
    background-color: #cccccc;
  }

  a:hover::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
    width: 100%;
  }

  li {
    position: relative;
    padding-left: 20px;
    margin-bottom: 10px;
    width: 100%;
  }

  .pltitle {
    display: inline-block;
    text-decoration: none;
    color: #333;
    position: relative;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 10em;
  }

  :global(.dark) .pltitle {
    color: #cccccc;
  }

  @media (max-width: 800px) {
    .pltitle {
      max-width: 5em;
    }
  }

  @media (max-width: 500px) {
    .pltitle {
      max-width: 10em;
    }
  }

  li::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 0;
    width: 10px;
    height: 10px;
    background-color: #333; /* 点 */
    border-radius: 50%;
    transform: translateY(-50%);
  }

  li::after {
    content: "";
    position: absolute;
    top: 40%;
    left: 5px;
    width: 1px;
    height: 175%;
    background-color: #333; /* 连接线 */
  }

  :global(.dark) li::before {
    background-color: #cccccc;
  }

  :global(.dark) li::after {
    background-color: #cccccc;
  }

  li:last-child::after {
    display: none;
  }
</style>
