---
// 欢迎卡片组件
---

<div class="welcome-card">
  <p class="welcome-text" id="welcomeThemeToggle" role="button" tabindex="0">
    欢迎来到我的博客
  </p>
</div>

<script is:inline>
  // 复用现有的暗黑模式切换逻辑：切换 html 上的 .dark 类，并同步到 localStorage
  const toggleTheme = () => {
    const element = document.documentElement;
    element.classList.toggle('dark');
    const isDark = element.classList.contains('dark');
    try {
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
    } catch (e) {
      // ignore
    }
  };

  const bindWelcomeToggle = () => {
    const el = document.getElementById('welcomeThemeToggle');
    if (!el) return;

    el.addEventListener('click', toggleTheme);
    el.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        toggleTheme();
      }
    });
  };

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', bindWelcomeToggle);
  } else {
    bindWelcomeToggle();
  }
</script>

<style>
  .welcome-card {
    background-color: rgb(255, 255, 255);
    box-shadow: 0 3px 6px #9a9a9a;
    border-radius: 12px;
    padding: 16px 20px;
    transition: all 0.3s ease;
    box-sizing: border-box;
  }
  
  @media (min-width: 637px) {
    .welcome-card {
      width: 100%;
    }
  }
  
  @media (max-width: 636px) {
    .welcome-card {
      width: 100%;
    }
  }

  :global(.dark) .welcome-card {
    background-color: #2a2a2a;
    box-shadow: 0 3px 6px #000000;
  }

  .welcome-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
  }

  :global(.dark) .welcome-card:hover {
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.4);
  }

  .welcome-text {
    margin: 0;
    padding: 0;
    font-size: 1.2rem;
    font-weight: 600;
    color: #333;
    text-align: center;
    cursor: pointer;
    user-select: none;
  }

  :global(.dark) .welcome-text {
    color: #e0e0e0;
  }
</style>

